<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.sivan.jetnft">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".MyApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.JetNFT">
        <activity
            android:name=".screens.NFTActivity"
            android:exported="true"
            android:label="@string/title_activity_nftactivity"
            android:theme="@style/Theme.JetNFT.NoActionBar" />
        <activity
            android:name=".ProfileCompose"
            android:exported="true"
            android:label="@string/title_activity_profile_compose"
            android:theme="@style/Theme.JetNFT.NoActionBar" />
        <activity
            android:name=".TransactionsCompose"
            android:exported="true"
            android:label="@string/title_activity_transactions_compose"
            android:theme="@style/Theme.JetNFT.NoActionBar" />
        <activity
            android:name=".screens.FavouritesCompose"
            android:exported="true"
            android:label="@string/title_activity_favourites_compose"
            android:theme="@style/Theme.JetNFT.NoActionBar" />
        <activity
            android:name=".screens.Home"
            android:exported="true"
            android:label="@string/title_activity_home"
            android:theme="@style/Theme.JetNFT.NoActionBar" />
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/Theme.JetNFT.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>